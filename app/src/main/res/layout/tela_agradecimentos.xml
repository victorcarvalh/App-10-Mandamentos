<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "@drawable/cruz"
    tools:context=".TelaAgradecimentos">

    <TextView

        android:id="@+id/txtAgradecimentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="@string/texto_Parabens"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="80dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="@string/texto_Redes_Sociais" />

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgInsta"
        android:layout_width="41dp"
        android:layout_height="66dp"

        app:srcCompat="@drawable/instagram" />

        <ImageView

            android:id="@+id/imgFace"
            android:layout_width="41dp"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imgYtb"
            android:layout_width="41dp"
            android:layout_height="66dp"
            app:srcCompat="@drawable/youtube" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="'@oaplicativodabiblia" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:text="'Eu Sou o Caminho, a Verdade e a Vida.'" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:text="JoÃ£o 14:6 " />

</LinearLayout>